{
  "name": "mcp-gateway",
  "version": "1.0.0",
  "scripts": {
    "dev": "nodemon --watch src --ext py --exec uv run python -m src.main",
    "format:check": "prettier --check \"frontend/**/*.html\"",
    "format": "prettier --write \"frontend/**/*.html\""
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "plugins": [
      "prettier-plugin-jinja-template"
    ]
  }
}
